<mvc:View
    controllerName="sapui5.project.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="detailsPage"
        title="{i18n>titleDetails}"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
        showNavButton="true"
        navButtonPress=".navBack"
    >
        <content>
            <core:Fragment
                fragmentName='sapui5.project.fragments.Details.Form'
            />

            <core:Fragment
                fragmentName='sapui5.project.fragments.Details.Table'
            />

            <core:Fragment
                fragmentName='sapui5.project.fragments.Details.Pagination'
            />
        </content>
    </Page>
</mvc:View>
