<mvc:View
    controllerName="sapui5.project.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    >
        <content>
            <core:Fragment
                fragmentName='sapui5.project.fragments.Home.FilterBar'
            />

            <core:Fragment fragmentName='sapui5.project.fragments.Home.Table' />

            <core:Fragment
                fragmentName='sapui5.project.fragments.Home.Pagination'
            />
        </content>
    </Page>
</mvc:View>
